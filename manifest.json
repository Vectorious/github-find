{
  "name": "GitHub Repo Search",
  "version": "1.0.1",
  "manifest_version": 2,
  "icons": { "16": "favicon.ico" },
  "description": "An extension for searching within GitHub repositories.",
  "homepage_url": "https://github.com/vectorious/github-find",
  "background": {
	"scripts": ["jquery-1.9.1.min.js", "background.js"],
	"persistent": false	
  },
  "page_action": {
    "default_icon": "favicon.ico",
    "default_title": "Click or press Ctrl+Shift+F to search this repository."
  },
  "content_scripts": [
    {
      "matches": ["*://github.com/*/*"],
      "exclude_globs": ["*github.com/*/"],
      "js": ["jquery-1.9.1.min.js", "jquery.ui.position.min.js", "content-keydown.js"]
    }
  ],
  "permissions": ["tabs"]
}
